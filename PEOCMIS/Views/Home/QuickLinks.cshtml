@{
    Layout = "~/Views/Shared/Master_page.cshtml";
}

<body>


    <!-- ============================================================== -->
    <div class="page-wrapper">
        <div class="container-fluid">


            <div class="form-group row">
                <h4>Add Department Links</h4>
            </div>

            <form class="mt-4" id="form_submit">


                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Department Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="deptName" name="deptName" placeholder="Department Name">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Website Link</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="link" name="link" placeholder="Website Link">
                    </div>
                </div>


                <div class="form-group row">

                    <label for="inputPassword" class="col-sm-2 col-form-label"></label>
                    <div class="col-md-8">

                        <button class="btn btn-success col align-self-end" type="submit">Add</button>

                    </div>

                </div>


            </form>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">QuickLinks</h4>

                        <div class="table-responsive">
                            <table id="tbl_data" class="table table-striped table-bordered display no-wrap"
                                   style="width:100%">
                                <thead>
                                    <tr>
                                        @*AppPK,b.Response,b.VarName,b.Section*@
                                        <th>#</th>
                                        <th>Department Name</th>
                                        <th>Link</th>
                                        <th>PK</th>
                                        <th>Action</th>
                                   
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>


<script src="~/MyScripts/QuickLinks.js"></script>